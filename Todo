ToogleText

import { Utils } from '../utils';

const TOGGLE_TEXT = {
  expanded: 'weniger anzeigen',
  collapsed: 'mehr anzeigen',
};

export class TextToggle {
  constructor(selector = '.text-block--toggle') {
    this._rootEls = Utils.toArray(selector);

    if (!this._rootEls) return;

    let i = this._rootEls.length;

    while (i--) {
      this._init(this._rootEls[i]);
    }
  }

  _init(rootEl) {
    rootEl._toggleableArea = Utils.select('.text-block__toggle-area', rootEl);
    rootEl._toggler = Utils.select('.text-block__toggler', rootEl);

    rootEl._toggler.addEventListener('click', (e) => this._handleClick(e, rootEl));
  }

  /* == Event handler == */

  _handleClick(e, rootEl) {
    const isOpen = e.currentTarget.ariaExpanded == 'true';

    e.currentTarget.ariaExpanded = !isOpen;

    rootEl._toggleableArea.ariaHidden = isOpen;
  }
}
